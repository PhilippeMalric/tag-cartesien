{
  "rules": {
    ".read": "auth != null",
    ".write": false,

    "positions": {
      "$matchId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "presence": {
      "$matchId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "roomsMeta": {
      "$matchId": {
        "ownerUid": {
          ".read": "auth != null",
          ".write": "auth != null && !data.exists() && newData.isString() && newData.val() === auth.uid"
        }
      }
    },

    "bots": {
      "$matchId": {
        "$botId": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('roomsMeta').child($matchId).child('ownerUid').val() === auth.uid"
        }
      }
    }
  }
}
