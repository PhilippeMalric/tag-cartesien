{
  "rules": {
    ".read": "auth != null",
    ".write": false,

    "positions": {
      "$matchId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "presence": {
      "$matchId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "roomsMeta": {
      "$matchId": {
        "ownerUid": {
          ".read": "auth != null",
          ".write": "auth != null && !data.exists()"
        }
      }
    },

    "bots": {
      "$matchId": {
        "$botId": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('roomsMeta').child($matchId).child('ownerUid').val() === auth.uid"
        }
      }
    },
    "rooms": {
      ".indexOn": ["updatedAt"],
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "updatedAt": { ".validate": "newData.isNumber()" }
      }
    }
  }
}
